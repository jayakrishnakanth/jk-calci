    <title>Calculator App</title>
    <style>
        body {
            background: #f2f2f2;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .calculator {
            background: #222;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0,0,0,0.3);
            width: 300px;
        }

        .display {
            width: 100%;
            height: 60px;
            background: #000;
            color: #0f0;
            font-size: 2rem;
            border: none;
            margin-bottom: 15px;
            text-align: right;
            padding: 10px;
            border-radius: 10px;
        }

        .buttons button {
            width: 22%;
            height: 50px;
            margin: 5px;
            font-size: 1.2rem;
            border: none;
            background: #444;
            color: white;
            border-radius: 10px;
            cursor: pointer;
        }

        .buttons button:hover {
            background: #666;
        }

        .btn-equal {
            background: #ff9500 !important;
        }
        .btn-clear {
            background: #ff3b30 !important;
        }
    </style>
